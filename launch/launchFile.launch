<launch>
	<arg
                name="result"
                default="NA"
        />
        <arg
                name="record" 
                default="false"
        />
	
        <node
		pkg = "beginner_tutorials"
		name = "talker"
		type = "talker"
		output = "screen"
                args="$(arg result)"
	/>
	<node
		pkg = "beginner_tutorials"
		name = "listener"
		type = "listener"
		output = "screen"
		launch-prefix="gnome-terminal --command"
	/>
        <node
                pkg="rosbag"
 	        name="rosbag_record_talker"
        	type="record"
        	args="--duration=15 --all --output-name=$(find beginner_tutorials)/results/bagDataFile.bag"
 	        if="$(arg record)"
        />

</launch>
